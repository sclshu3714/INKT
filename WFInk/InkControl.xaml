<UserControl x:Class="WFInk.InkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WFInk"
             mc:Ignorable="d" 
             d:DesignHeight="512" d:DesignWidth="512">
    <Grid>
        <InkCanvas x:Name="inkCanvas" Opacity="0.01" Panel.ZIndex="0">
            <InkCanvas.Background>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Image x:Name="bgImage" Opacity="0.01" Source="/Resources/pg.png"  Panel.ZIndex="0"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </InkCanvas.Background>
            <!--<Rectangle Fill="Transparent" RadiusX="0" RadiusY="0" Margin="0" Stroke="Red" StrokeDashArray="3"/>-->
        </InkCanvas>

    </Grid>
</UserControl>
