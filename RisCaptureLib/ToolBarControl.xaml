<UserControl x:Class="RisCaptureLib.ToolBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RisCaptureLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="186" Height="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Width="62" Height="32" Content="保存" Cursor="Hand" x:Name="buttonSave" Click="buttonSave_Click"/>
        <Button Grid.Column="1" Width="62" Height="32" Content="完成" Cursor="Hand" x:Name="buttonComplete" Click="buttonComplete_Click"/>
        <Button Grid.Column="2" Width="62" Height="32" Content="取消" Cursor="Hand" x:Name="buttonCancel" Click="buttonCancel_Click"/>
    </Grid>
</UserControl>
